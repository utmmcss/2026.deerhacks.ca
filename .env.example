# DeerHacks Frontend Environment Variables
# Copy to .env.local for local development

# Backend API URL
NEXT_PUBLIC_DEERHACKS_BASE_URL=http://localhost:8080

# Discord OAuth2 callback URI
REDIRECT_URI=http://localhost:3000/login/callback

# Feature toggles
NEXT_PUBLIC_TOGGLE_DASHBOARD=true
NEXT_PUBLIC_TOGGLE_STATUS_UPDATES=false
NEXT_PUBLIC_TOGGLE_INTERNAL_DEFAULT_VISIBLE=false
NEXT_PUBLIC_TOGGLE_SIGNUP_HACKER=false
NEXT_PUBLIC_TOGGLE_SIGNUP_VOLUNTEER=false
NEXT_PUBLIC_TOGGLE_SIGNUP_MENTOR=false

# Auth provider shown in the login UI: "discord" (default/prod) or "mock" (local dev only).
# This is a BUILD-TIME variable â€” you must rebuild the frontend after changing it.
# In prod this must always be "discord".
NEXT_PUBLIC_AUTH_PROVIDER=discord

# Discord OAuth URL (replace YOUR_CLIENT_ID with your Discord app client ID)
NEXT_PUBLIC_DISCORD_OAUTH2_URL=https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Flogin%2Fcallback&response_type=code&scope=identify%20email

# CMS (optional, for events/photos)
# NEXT_PUBLIC_DEERHACKS_CMS_BASE_URL=
# NEXT_PUBLIC_DEERHACKS_CMS_TOKEN=

# Optional URLs
# NEXT_PUBLIC_VOLUNTEER_FORM=
# NEXT_PUBLIC_MENTOR_FORM=
# NEXT_PUBLIC_DEVPOST_URL=
# NEXT_PUBLIC_GALLERY_URL=
